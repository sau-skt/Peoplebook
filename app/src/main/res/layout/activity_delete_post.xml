<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background"
    tools:context=".UploadProfileImageActivity">

    <ImageView
        android:id="@+id/activity_delete_post_imageview"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/activity_delete_post_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_delete_post_imageview"
        android:textColor="@color/white"
        android:text="Delete Image"
        android:background="@drawable/input_text_round"
        android:padding="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>